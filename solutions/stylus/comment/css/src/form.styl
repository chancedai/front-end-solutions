/*评论框*/
.sina-comment-form
	background: #FCFCFB;border:1px solid #D0CCC7;border-top-color:#D2CEC9;padding:0 20px 0 0;position: relative;zoom:1;
	.user .name a:link,	.user .name a:visited
		color:#ff8500
	.user .name a:hover,	.user .name a:active
		color:#c00

	.hd
		line-height: 30px;padding: 10px 0 15px;position: relative;zoom:1
		.tip
			float:left;direction: ltr; text-indent: -999em; width:125px;height:30px; background-position:  5px -1000px;margin-left: 20px;position:relative;zoom:1
		.count
			float: right;line-height: 28px;font-size: 14px
		.count a:link,.count a:visited
			color:#c00
		.count a:hover
			color:#c00;text-decoration: underline
		.count em
			color:#c00;font-size:16px;font-family:arial;font-style: italic;vertical-align: -1px;padding: 0 5px
		.count span
			font-family: arial;padding: 0 10px;color:#A0A0A0;font-size: 16px;width:1px;overflow: hidden

	.bd
		padding-right:0;position: relative;zoom:1
		.user
			width:126px;height:135px;text-align: center;position: absolute;left:0;top:0
		.user .form-head a
			display: inline-block;border:1px solid #D0CCC7;border-radius: 43px;background: #fff
		.user .form-head img
			display: block; width:80px;height:80px; border-radius: 40px;margin: 2px
		.user .name
			display: block
		.arrow
			position: absolute;left:117px;top:35px; width:10px;height:17px;overflow: hidden; background-position: 0 -60px
		.editor
			padding-left:126px;position: relative;zoom:1
		.inner
			border:1px solid #ccc;padding:0 5px;background: #fff;position: relative;border-radius: 3px
		.box
			display: block;width:100%;padding: 8px 0; height:104px; margin:0;border:0;overflow: auto;font-size: 14px;line-height: 26px; font-family: "Microsoft Yahei","\5FAE\8F6F\96C5\9ED1","SimSun","\5B8B\4F53","Arial Narrow",serif;resize:none
		.box:focus
			outline: none
		.tip
			position: absolute;left:50%;top:50%

	.ft
		padding: 20px 0 18px 126px
		.face
			float:left
		.trigger
			float:left;position: relative;width:44px;height:26px;background-position:  0 -180px;direction: ltr; text-indent: -999em;overflow:hidden
		.trigger-active
			background-position:  0 -210px
		.trigger:active
			position: relative;top:-1px
		.user
			float: right;position: relative
		.btn
			float: right;width: 50px;padding-left:35px;padding-right: 35px;margin:-7px 0 0 25px
		.weibo
			cursor: pointer;float: left
		.login
			float: right
		.user .name
			margin-right: 8px
		.user .logout
			margin-left: 8px
		.login .login-lnk
			margin-right: 8px
		.login .register-lnk
			margin-left: 8px